<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <div class="max-w-4xl mx-auto p-4">
        <% if (!message) { %>
            <div class="bg-green-200 p-2 font-bold shadow rounded mb-4">
              <%= message %>Mesage
            </div>
          <% } %>
        <article class="mb-4">
            <h1 class="font-bold text-lg mb-2">Upload files</h1>
            <form action="/upload" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <input
                        class="form-control"
                        type="file"
                        name="images"
                        accept="image/*"
                        required multiple
                    >
                </div>
                <button class="bg-blue-400 font-bold px-4 py-2 opacity-90 rounded hover:opacity-100" type="submit">Upload</button>
            </form>
        </article>        
        
        <section>
            <article class="py-2 px-3 bg-slate-200 shadow-sm rounded">
                <h5 class="text-2xl font-bold mb-2">Uploaded files</h5>
                <div class="flex flex-col gap-2">
                    <% uploads.forEach(upload => { %>
                    <div class="bg-orange-100 max-w-xs mx-auto shadow-lg flex flex-col gap-2 rounded">
                        <div class="h-24 flex justify-center">
                            <img src="<%= upload.fileUrl %>" alt="<%= upload.name %>" class="h-full object-contain">
                        </div>
                        <div class="flex flex-col gap-2 px-3 py-2">
                            <div>
                                <span class="font-bold">Name: </span>
                                <span><%= upload.name %></span>
                            </div>
                            <div>
                                <span class="font-bold">Path: </span>
                                <span><%= upload.filePath %></span>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </article>
        </section>
    </div>
</body>
</html>